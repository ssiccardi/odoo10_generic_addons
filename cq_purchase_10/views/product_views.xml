<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="product_normal_form_view_cq" model="ir.ui.view">
            <field name="name">product.normal.form.view.cq</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
               <xpath expr="//group[@name='inventory']/../separator[1]" position="attributes">
                   <attribute name="invisible">1</attribute>
               </xpath>
               <xpath expr="//field[@name='seller_ids']" position="attributes">
                   <attribute name="invisible">1</attribute>
               </xpath>
            </field>
        </record>
                    
</odoo>
